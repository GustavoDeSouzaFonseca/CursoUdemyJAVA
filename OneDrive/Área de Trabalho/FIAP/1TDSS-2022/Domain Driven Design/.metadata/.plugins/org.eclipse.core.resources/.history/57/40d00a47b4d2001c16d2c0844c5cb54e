package br.com.fiap.string.view;

public class Exemplo {

	//main CTRL + espaço
	public static void main(String[] args) {
		//Caracteres de escape 
		// \n (quebra a linha)
		// \t (tabulação)
		// \" (caractere " na string) \' (aspas simples na string) \\ (barra invertida na string)
		String endereco = "\tAv Lins de Vasconcelos, 1222 \nCambuci \n\"FIAP\" \\ \'";
		System.out.println(endereco);
		
		String pais = "Brasil";
		//Concatenar o pais com a lingua
		pais + " Portugues";
		//Concatenar com a capital do país (utilizando o método concat)
		pais = pais.concat(" Brasilia");
		System.out.println(pais);
		
	}
}