package br.com.fiap.condicionais.view;

import javax.swing.JOptionPane;

public class Exmplo02 {
	
	public static void main(String[] args) {
		
		//Criar uma calculadora
		//Ler primeiro número
		int n1 = Integer.parseInt(JOptionPane.showInputDialog("Digite o primeiro número: "));
		//Pedir a operação para o usuário (+, -, *, /)
        String Op = JOptionPane.showInputDialog("Digite qual a forma da operação entre (+, -, *, /)");
        //Ler segundo número
        int n2 = Integer.parseInt(JOptionPane.showInputDialog("Digite o segundo número: "));
		//Realizar a operação e exibir a resposta
        switch(Op) {
        case "+":
        	int soma = n1 + n2;
        	JOptionPane.showMessageDialog(null, soma);
        	break;
        case "-":
        	int sub = n1 - n2;
        	JOptionPane.showMessageDialog(null, sub);
        	break;
        case "*":
        	int mult = n1 * n2;
        	JOptionPane.showMessageDialog(null, mult);
        	break;
        case "/":
        	if(n2 == 0) {
        		JOptionPane.showInputDialog("Impossível dividir o dividendo por 0! Por favor coloque outro número: ");
        	} else {
        	float div = (float)n1 / (float)n2;
        	JOptionPane.showMessageDialog(null, div);
        	break;
        	}
        default:
        	JOptionPane.showMessageDialog(null, "Você digitou um operador NÃO reconhecido!");
        
        	
        }
		
	}

}